<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/CustomDialog</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomDialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">false</item>
    </style>

    <!-- Drawer -->
    <style name="DrawerEntry" parent="android:Widget.TextView">
        <item name="android:layout_marginTop">@dimen/drawer_entry_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/drawer_entry_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/drawer_entry_left_margin</item>
        <item name="android:drawablePadding">@dimen/drawer_entry_left_margin</item>
        <item name="android:textSize">@dimen/drawer_entry_text_size</item>
    </style>

    <style name="DrawerEntry.Page">
        <item name="android:textSize">@dimen/drawer_entry_text_size_page</item>
    </style>

    <!-- Manage categories -->
    <style name="CategoriesContainer">
        <item name="android:layout_margin">@dimen/categories_container_margin</item>
        <item name="android:padding">@dimen/categories_container_padding</item>
    </style>

</resources>
